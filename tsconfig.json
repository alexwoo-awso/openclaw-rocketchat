{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "types": [],
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
